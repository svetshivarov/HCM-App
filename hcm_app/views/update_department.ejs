
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Department</h2>
            <span class="text-light">Use the below form to Update a department</span>
        </div>

        <!-- add salary form -->
         <!-- form handling -->
         <form action="/api/departments" method="POST" id="add_departments">
            <div class="new-_user">
                <div class="form-group">
                    <label for="department" class="text-light">Department</label>
                    <input type="hidden" name="id" value="<%= departments._id %>">
                    <input type="text" name="department" value="<%= departments.department %>" placeholder="Department">
                </div>
                <div class="form-group">
                    <label for="location" class="text-light">Location</label>
                    <input type="text" name="location" value="<%= departments.location %>" placeholder="Location">
                </div>
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-4" name="status" value="Active" <%= departments.status == 'Active' ? 'checked' : '' %>>
                        <label for="radio-4" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="status" value="Inactive" <%= departments.status == 'Inactive' ? 'checked' : '' %>>
                        <label for="radio-5" class="radio-label">Inactive</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->